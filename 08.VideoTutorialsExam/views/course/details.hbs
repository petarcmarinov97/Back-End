<main>
    {{#with course}}
        <div class="container">
            <h1 class="my-4">Course title : {{title}}
            </h1>

            <div class="row">

                <div class="col-md-8">
                    <img class="img-fluid" src="{{imageUrl}}" alt="Express" />
                </div>

                <div class="col-md-4 text-center">
                    <h3 class="my-3">Course Description</h3>
                    <p>{{description}}</p>

                    {{#if hasUser}}
                        {{#if isOwner}}
                            <a class="btn btn-danger" href="/courses/delete/{{_id}}">Delete</a>
                            <a class="btn btn-warning" href="/courses/edit/{{_id}}">Edit</a>
                        {{else if isEnrolled}}
                            <span class="enrolled-span">You are already enrolled</span>
                        {{else}}
                            <a class="btn btn-primary" href="/courses/enroll/{{_id}}">Enroll</a>
                        {{/if}}
                    {{/if}}

                </div>
            </div>
        </div>
    {{/with}}
</main>